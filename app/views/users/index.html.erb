<%= stylesheet_link_tag 'users/user_list' %>


<div class="row">
  <div class="col-sm">
    <h1 align="center">Lista de Usuarios</h1><br />
    <%= link_to "New User", new_user_path, style: "margin: 0 auto; display:block; text-align: center; width: 200px", class: "btn btn-outline-dark"%>
    <br />
  </div>
</div>

<div class="row">
  <div class="col-lg"></div>
  <div class="col-lg-8">
    <div class="table-responsive">
      <table class="table table-hover" id="users_table">
      	<thead>
      		<tr>
      			<th scope="col"><h3>ID</h3></th>
      			<th scope="col"><h3>Avatar</h3></th>
      			<th scope="col"><h3>Username</h3></th>
      			<th scope="col"><h3>Email</h3></th>
      			<th scope="col"><h3>Admin</h3></th>
      			<th scope="col"><h3>Actions</h3></th>
      		</tr>
      	</thead>
      	<tbody>
      		<% @users.each do |user| %>
      		<tr>
      			<th scope="row"><span class=""><%= user.id %></span></td>
      			<td><p style="text-align:center;"><%= image_tag user.avatar_url(:thumbnail), class: "user_list_thumb" %></p></td>
      			<td><span class=""><%=user.username%></span></td>
      			<td><span class=""><%= user.email %></span></td>
      			<td><span class=""><%= user.admin %></span></td>
      			<td>
      			  <div class="d-flex">
                <%=link_to icon('fas', 'eye'), "users/"+user.id.to_s, class: "p-2 flex-fill btn btn-outline-info" %>
                <%=link_to icon('fas', 'edit'), edit_user_path(user.id.to_s), class: "p-2 flex-fill btn btn-outline-warning" %>
                <%=link_to icon('fas', 'trash'), "users/"+user.id.to_s, :method => :delete, :confirm => "Are you sure?", class: "p-2 flex-fill btn btn-outline-danger" %>
              </div>
      			</td>
      		</tr>
      		<% end %>
      	</tbody>
      </table>
    </div>
  </div>
  <div class="col-lg"></div>
</div>

