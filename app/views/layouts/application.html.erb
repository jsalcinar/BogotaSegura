<!DOCTYPE html>
<html>
  <head>
    <title>Bogota Segura</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' , 'data-turbolinks-track': 'reload'%>
    <%= javascript_pack_tag 'application' %>

    <%= yield(:header) %>

  </head>

    <body>
    <div id="body_div">
      <%= render 'layouts/navigation' %>
      <% if notice %>
        <p id="Log_Alert" class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p id="Log_Alert" class="alert alert-danger"><%= alert %></p>
      <% end %>
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
